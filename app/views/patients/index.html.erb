<center>

	<h1>Patient Details </h1>
		
				<%= form_tag(patients_path ,method:'GET' ) do  %>
    	 			<%= text_field_tag(:search, params[:search]) %>
    	  			<%= submit_tag("Search", name: nil) %></p>
				<% end %>
		

<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th>Phone Number</th>
			<th>Email</th>
			<th>Gender</th>
			<th>Department</th>
			<th>Actions</th>
		</tr>
	</thead>
	
		<% @p.each do |p| %>
			<tr>
				<td><%= link_to p.name , appointments_path(id: p.id , name: "patient" ) %></td>
				<td> <%= p.age %></td>
				<td><%= p.phone %></td>
				<td><%= p.email %></td>
				<td><%= p.gender%></td>
				<td><%= p.department %></td>

				<td>
					<button class="btn btn-info"><%= link_to "show" , patient_path(p) %></button> 
					<button class="btn btn-info"> <%= link_to "edit" , edit_patient_path(p) %></button> 
 					<button class="btn btn-warning"><%= link_to 'delete',patient_path(p) , method:'DELETE' %></button>
 					<% if p.patient_account.nil? %>
							<button class="btn btn-success"><%= link_to 'generate number', generate_number_patient_patient_path(p)  %></button>
					<% end %>
					
				</td>
			</tr>  
		<% end %>

</table>

<button><%= link_to "new" , new_patient_path %></button>
</center> 