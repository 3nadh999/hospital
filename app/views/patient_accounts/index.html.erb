<p id="notice"><%= notice %></p>

<h1>Patient Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_accounts.each do |patient_account| %>
      <tr>
        <td><%= patient_account.number %></td>
        <td><%= patient_account.patient_id %></td>
        <td><%= link_to 'Show', patient_account %></td>
        <td><%= link_to 'Edit', edit_patient_account_path(patient_account) %></td>
        <td><%= link_to 'Destroy', patient_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient Account', new_patient_account_path %>
